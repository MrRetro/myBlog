// tsconfig.json
{
    "compilerOptions": {
      "lib": [
        "dom",
        "es2015",
        "es2015.promise"
      ],
      "moduleResolution": "node",
      "module": "esnext",
      // 与 Vue 的浏览器支持保持一致
      "target": "es5",
      // 这可以对 `this` 上的数据属性进行更严格的推断
      "strict": true,
      // 如果使用 webpack 2+ 或 rollup，可以利用 tree-shake:
      // 允许从没有设置默认导出的模块中默认导入
      "allowSyntheticDefaultImports": true,
      // 启用装饰器
      "experimentalDecorators": true,
      "noImplicitAny": false,
      "strictPropertyInitialization": false
    },
    "filesGlob": [
      "./src/**/*.ts*"
    ]
}
